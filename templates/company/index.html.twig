{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ asset('css/landing.css') }}">
{% endblock %}

{% block body %}
{% include 'nav.html.twig' %}
    <div class="container connexion">
        <h1>Liste des entreprises</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Logo</th>
                    <th>Addresse</th>
                    <th>Ville</th>
                    <th>Code Postale</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for company in companies %}
                <tr>
                    <td>{{ company.name }}</td>
                    <td>{{ company.logo }}</td>
                    <td>{{ company.address }}</td>
                    <td>{{ company.city }}</td>
                    <td>{{ company.zipCode }}</td>
                    <td>
                        <a href="{{ path('company_show', {'id': company.id}) }}">Horraires</a> / 
                        <a href="{{ path('company_edit', {'id': company.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Pas d'entreprise cr√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('company_new') }}"><button class="btn btn-black create-btn">Nouvelle entreprise</button></a>
    </div>
{% endblock %}